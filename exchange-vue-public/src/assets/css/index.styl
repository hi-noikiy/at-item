.just-index-style {
  background: $new-bg-color
  .main-content{
    width:86.97%;
    max-width:1920px;
    .noticeBox{
      background:none;
      border:none;
      border-bottom:1px solid $new-border-blue-color;
      .notice_index{
        padding-left:20px;
      }
      .horn{
        color:$new-blue-font-color;
        margin:0 5px 0 0;
      }
      .noticespan{
        color:$new-blue-font-color;
      }
      .noticespan:hover{
        color:$blue-font-color;
      }
      .slider-item{
        div{
          width:100%;
          display:block;
          text-align:left;
        }
      }
    }
    .recommend{
      .recomm-content{
        width:16.167%;
        margin-right:4.79125%;
        background:$new-sub-background-color;
        border: 1px solid $new-border-blue-color;
        .content{
          margin:20px 12px 0;
          .symbol_buy{
            font-size:20px;
            color:$white-color;
            b{
              font-size:14px;
            }
          }
          .price{
            font-size: 16px;
            color:$white-color;
          }
          .price.c-rise{
            color: $buy-color;
          }
          .price.c-fall{
            color: $sell-color;
          }
          .turnover{
            font-size: 16px;
            color:$mew-explain-font-color;
          }
        }
      }
    }
    .market{
      background:$new-market-font-color;
      margin-top:32px;
      .header{
        background:$new-heade-background-color;
        ul{
          li{
            border-top:none;
            border-bottom:2px solid $new-heade-background-color;
          }
          li.findactive {
            color:$white-color;
            border-color:$new-th-font-color
            background:none;
          }
        }
        .inputBox{
          .search{
            background:$new-input-font-color;
            input{
              background:$new-input-font-color;
            }
          }
          
        }
      }
      .mark-box{
        tr {
          th{
            color:$new-th-font-color;
          }
          &:hover{
            background:$subheade-background-color;
          }
          &.noHover{
            background:none;
          }
        }
        .symboy_bgc{
          background:none;
        }
      }
    }
  }
  .swiper_at_content{
    width:86.97%;
    margin: 30px auto 0;
    min-width: 1150px;
    border-radius: 16px;
    .swiper_padding{
      padding-top:15.98802395209581%;
      position:relative;
      overflow:hidden;
      .swiper_con{
        position:absolute;
        left:0;
        top:0;
        width:100%;
        height:100%;
        border-radius:16px;
        .swiper-container{
          width:100%;
          height:100%;
          .swiper-wrapper{
            width:100%;
            height:100%;
            .swiper-slide{
              width:25%;
              height:100%;
              border-radius:16px;
              overflow:hidden;
              a{
                width:100%;
                height:100%;
                display:block;
                border-radius:16px;
                overflow:hidden;
                img{
                  max-width:100%;
                  display:block;
                  width:100%;
                  height:100%;
                }
                .text{
                  position:absolute;
                  left:0;
                  bottom -150px;
                  background: rgba(0, 0, 0, .6);
                  font-size: 20px;
                  color: #FFFFFF;
                  padding:10px 25px;
                  width:100%;
                  box-sizing border-box;
                  border-radius:0 0 16px 16px;
                  line-height: 24px;
                  transition:all 0.3s ease;
                }
              }
              a:hover{
                .text{
                  bottom 0;
                }
              }
            }
          }
          .swiper-button-prev, .swiper-container-rtl .swiper-button-next,.swiper-button-next, .swiper-container-rtl .swiper-button-prev{
            border:none;
            width:30px;
            height:60px;
            background-image: url("data:image/png;base64,")
            background-size:100%;
          }
          .my-button-disabled {
            opacity:0
          }
          .swiper-button-prev, .swiper-container-rtl .swiper-button-next{
            left:0;
          }
          .swiper-button-next, .swiper-container-rtl .swiper-button-prev{
            right:0;
            transform: rotate(-180deg);
          }
        }
      }
    }
  }
}


@media (min-width: 320px){
  .just-index-style{
     .main-content{
        .recommend{
          .recomm-content{
            width:19%;
            margin-right:1.25%;
          }
        }
     }
  }
}

