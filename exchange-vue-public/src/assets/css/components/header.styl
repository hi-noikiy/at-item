.m-header {
  background: $public-header-background;
  display: block !important; 
  color: $heade-font-color;
  position:fixed;
  left:0;
  top:0;
  width:164px;
  z-index:10;
  height:100%;
  .header {
    // padding:0 20px;
    // height: 72px;
    // margin: 0 auto;
    // line-height: 72px;
    font-size: 14px;
    position:relative;
    z-index:12;
    height:100%;
    min-height:600px;
    .logo {
      margin:20px 0;
      a{
        display:block;
      }
      img {
        vertical-align: middle;
        width: 100%;
      }
    }
    .header-ul {
      width:100%;
      li {
        float: left;
        width:100%;
        position:relative
        cursor: pointer;
        margin-bottom:12px;
        &.cut_line{
          padding:0 20px;
        }
        & p.more_box{
          display:none;
          position: absolute;
          top:70px;
          left:-18px;
          width:150%;
          background:$heade-background-color;
          padding-bottom:10px;
          a{
            line-height:34px;
            display:block;            
          }
        }
        &.nav_li:hover p.more_box{
          display:block
        }
        a {
          text-indent:26px;
          position:relative;
          color: $heade-font-color;
          line-height:44px;
          display:block; 
          width:100%;
          height:44px;
          &:hover {
            background: $nav-li-hover-color
            color: $white-color
          }
          &.new_ad {
            color: $yellow-color
          }
          &.more_link:after{
            content:'';
            position:absolute;
            width:0;
            height:0;
            border-style:solid;
            border-width:4px;
            border-color:$base-font-color rgba(0,0,0,0) rgba(0,0,0,0) rgba(0,0,0,0);
            right:-10px;
            top:50%;
            margin-top:-2px;
          }
          &:hover:after,
          &.router-link-active:after {
            border-color:$nav-li-color rgba(0,0,0,0) rgba(0,0,0,0) rgba(0,0,0,0);
          }
          // &.sub_link{
          //   margin:5px;
          // }
          span{
            position:absolute;
            width:0;
            height:0px;
            background:$blue-font-color;
            line-height:0;
            left:0;
            bottom:-10px;
          }
          &.router-link-active {
            background: $nav-li-color
            color: $white-color!important
            span{
              width:100%;
            }
          }
          &.deff-text{
            color:$yellow-color
          }
        }
      }
      li:hover, focus {
        color: $blue-font-color;
      }
    }

  }
  .header-right {
    position:absolute;
    left:0;
    bottom:0;
    width:100%;
    padding-bottom:40px;
    .personal_menu {
      display: inline-block
      width:100%;
    }
    .lang {
      display: inline-block;
      width:100%;
      .flag_icon {
        background: url(./../img/flag.png) no-repeat;
        display: inline-block;
        width: 20px;
        height: 15px;
        vertical-align: middle;
        margin-right: 3px;
        &.zh_CN {
          background-position: -29px 0;
        }
        &.el_GR {
          background-position: -29px 0;
        }
        &.en_US {
          background-position: 0 0;
        }
        &.ko_KR {
          background-position: -29px -18px;
        }
        &.mn_MN {
          background-position: 0px -18px;
        }
      }
    }
    .mase{
      position:relative;

    }
    .tegther_icon{position:relative;}
    .rightNav_item {
      display: inline-block
      cursor: pointer;
      position:relative;
      width:100%;
      margin-bottom:20px;
      // &:hover {
      //   color: $blue-font-color;
      // }
      a {
        width:100%;
        display:block;
        color: $heade-font-color;
        text-indent:26px;
        position:relative;
        line-height:44px;
        width:100%;
        height:44px;
        &:hover {
          background: $nav-li-hover-color
          color: $white-color!important
        }
        &.router-link-active {
          background: $nav-li-color
          color: $white-color!important 
        }
        &.creatButton{
          display:inline-block;
          padding:0 20px;
          font-size:14px;
          height:40px;
          line-height:40px;
          text-align:center;
          background:$blue-font-color;
          border-radius:4px;
          color:$white-color !important;
        }
        &:hover .creatButton{
          color:$white-color;
        }
        &.myadcolor{
          color:$blue-font-color;
        }
      }
      .login{
        margin-bottom:20px;
      }
     .msages{
       font-size: 20px;
       vertical-align: middle;
       }
       b{
          position: absolute;
          display:block;
          width: 5px;
          height:5px
          background: red;
          border-radius: 50%;
          top:-2px;
          left:-2px;
        }
      &.abuot_lists .select_menu ul {
        left:-10px;
      }
      .qr_code_wrap{
        width: 100%;
        position: absolute;
        right: -100%;
        border-radius: 4px;
        bottom: 0;
        text-indent: 0;
        .qr_code{
          background: #fff;
          img{
            width:164px;
            height:164px;
            position:relative;
          }
          i{
            position:absolute;
            bottom:-2px;
            left:0;
            width:100%;
            color:#333333;
            text-align:center;
          }
        }
      }
    }
    .right_active{
      color: $blue-font-color;
    }
  }
  .router-link-active {
    color: $blue-font-color;
  }
  .lang {
    cursor: pointer;
  }
  .select_menu {
    position: relative;
    cursor: pointer;
    ul {
      box-sizing:border-box;
      position: absolute;
      display: none;
      z-index: 9;
      width: auto;
      min-width: 100px;;
      background: $public-header-background;
      bottom: 0;
      border:1px solid $new-border-blue-color
      right: -100%;
      width:100%;
      li {
        line-height: 32px;
        width: auto;
        white-space: nowrap;
        vertical-align: middle;
        cursor: pointer;
        color: $heade-font-color;
        i {
          margin-right: 10px;
        }
        &:hover, &.selected {
          color: $white-color;
          i {
            color: $white-color;
          }
        }
      }
    &.themeList {
        li {
          text-align: center;
        }
      }
    }
    &:hover {
      ul {
        display: block;
      }
    }
    .icon {
      display: inline-block;
      background $heade-font-color;
      vertical-align: middle;
      margin-top: -5px;
    }
    .icon-down {
      position: absolute;
      top: 32px;
      font-size:12px;
      right: 0;
      font-weight: bold;
    }
    .langMark{
      li{
        text-indent:26px;
      }
    }
  }
}
.setThemePop {
  font-size: 12px;
  .setTheme {
    margin-top: 10px;
    padding-top: 10px;
    .inlint-title {
      color: #7080a3;
      font-size: 12px;
      margin: 0px 0 10px;
      text-align: left;
    }
    .radioLine {
      .tadioTd {
        padding-right: 15px;
        cursor: pointer;
        label {
          margin-left:5px;
          cursor: pointer;
        }
        input {
          cursor: pointer;
        }
      }
    }
  }
}





























