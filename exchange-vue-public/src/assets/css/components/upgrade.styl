.pageugrade {
  background:#3e3f58;
}
.pageugrade,
.pageugrade body,
.pageugrade .container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  min-width: 320px !important;
}

.pageugrade {
  #udesk_container,
  .m-header,
  .foot {
    display: none !important;
  }
}

.update_view_body {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #3e3f58;
  .update_wrap {
    width: 100%;
    padding-top: 56.25%;
    position: relative;
    img {
      width: 100%;
      position: fixed;
      left: 0;
      right: 0;
      top: 190px;
      margin: auto;
    }
  }
  .update_text {
    width: 100%;
    position: fixed;
    line-height: 26px;
    left: 0;
    top: 170px;
    text-align: center;
    span {
      font-size: 16px;
      color: #FFFFFF;
    }
    p {
      font-size: 12px;
      color: #c5c5c5;
    }
  }
}

@media (min-width: 414px) {
  .update_view_body .update_wrap {
    img {
      top: 170px;
    }
    .update_text {
      top: 150px;
      span {
        font-size: 18px;
      }
      p {
        font-size: 12px;
      }
    }
  }
}

@media (min-width: 768px) {
  .update_view_body .update_wrap {
    img {
      top: 120px;
    }
    .update_text {
      top: 120px;
      span {
        font-size: 20px;
      }
      p {
        font-size: 14px;
      }
    }
  }
}

@media (min-width: 992px) {
  .update_view_body .update_wrap {
    img {
      top: 100px;
    }
    .update_text {
      top: 100px;
      span {
        font-size: 26px;
      }
      p {
        font-size: 16px;
      }
    }
  }
}

@media (min-width: 1280px) {
  .update_view_body .update_wrap {
    img {
      top: 170px;
      width: 60%;
    }
    .update_text {
      top: 170px;
      span {
        font-size: 32px;
      }
      p {
        font-size: 20px;
      }
    }
  }
}
