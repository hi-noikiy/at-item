
#footer-box{
	background: $public-footer-background;
	color:$gray-font-color;
	.foot-min{
   		min-width:1150px;
   		width:86%;
   		margin: 0 auto;
   		padding: 0 20px;
   		max-width:1300px;
		.user_case{
			height: ''
		}
		.foot-min-top {
			border-bottom:1px solid $blobk-line-color;
			padding-bottom:20px;
		  	.foot-min-left{
		  		width:60%;
				min-width:60%;
				border-right:1px solid $blobk-line-color;
    	 		float:left;
    	 		padding-left:40px;
				margin-top:25px;
				min-height:200px;
		 			ul {
					 float:left;
					 width:100%;
					 padding-top:20px;
					  li{
						width:130px;
						float:left;
						height:40px;
						span{
							cursor:pointer
						}
						span:hover{
							text-decoration: underline;
						}
					  }
					.title{
						color:$base-font-color;
						font-weight:700
						font-size:14px;
					}
					.uside{
						height:30px !important;
						a{
							color:$explain-font-color;
						}
						a:hover{
							text-decoration: underline;
						}

					}
		 		}
     		}
			.foot-min-right{
				float:left;
				margin-top:25px;
				padding-left:40px;
				min-height:200px;
				.logo{
					padding-bottom:10px;
					img {
						height:27px;
					}
				}
				.phone{
					margin-top:10px;
					padding-bottom:10px;
					i{
							margin-right:8px;
							font-size:17px;
						}
					span{
						font-size:14px;
					}
				}
				.email{
					margin-top:10px;
					i{
						margin-right:10px;
						font-size:17px;
						vertical-align: middle;
						height:30px;
						float :left
					}
					div{
						float: left
						p{
							font-size:14px;
							margin-top:10px;
						}
					}
					span{
						font-size:14px;
					}
				}
				.foot-right-btm{
				 margin-top:20px;
				ul{
					li{
						float:left;
						width:30px;
						height:30px;
						border-radius:50%;
						margin-right:20px;
						background:$gray-font-color;
            position:relative;
						 img{
							 display:block;
							 margin:10%;
							 width:80%;
						 }
						 .sicode{
                            position:absolute;
                            left:-70px;
                            top:-158px;
                            width:167px;
                            height:163px;

                        }
                        .sicode:after{
                            position: absolute;
                            left: 50%;
                            bottom: 2px;
                            margin-left: -7px;
                            content: "";
                            border-width: 7px;
                            border-style: solid dashed dashed dashed;
                            border-color: #fff transparent transparent transparent;
                            width: 0;
                            height: 0;
                            line-height: 0;
                        }
                        .kfcode{
                            position:absolute;
                            right: 0;
                            width: 1560px;
                            overflow: hidden;
                            padding-bottom:10px;
                            top: -208px;
                            z-index:10;
                            .wx_co{
                                width: 177px;
                                height: 197px;
                                float: right;
                                text-align:center;
                                background:#fff;
                                color:#000
                            }
                            .wx_co img{
                                width:100%;
                                margin:0 auto;
                            }
                        }

                        .kfcode:after{
                            position: absolute;
                            right: 8px;
                            bottom: -4px;
                            content: "";
                            border-width: 7px;
                            border-style: solid dashed dashed dashed;
                            border-color: #fff transparent transparent transparent;
                            width: 0;
                            height: 0;
                            line-height: 0;
                        }
                        .kfcode:before{
                            position: absolute;
                            right: 0px;
                            bottom: -4px;
                            content: "";
                            width:100%;
                            background:transparent;
                            height:14px;
                        }
					}
				}
				}
			}
		}
		.foot-min-bottom{
			height:50px;
			line-height:50px;
			text-align:center;
		}
  	}
}
